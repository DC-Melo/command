# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi
_byobu_sourced=1 . /usr/bin/byobu-launch 2>/dev/null || true





#add DC directory
export dpj=$HOME/2P
export dpw=$HOME/0A/2P
export dbk=$HOME/2P/001-read
export dbg=$HOME/2P/006-write/blog
export dtl=$HOME/4T
export din=$HOME/4T/install
export dcm=$HOME/4T/command
export dwk=$HOME/5W
export dtrash=$HOME/.local/share/Trash

# add  alias by DC
if [  -n "$(uname -a | grep -i ubuntu)" ]; then
    alias duh1='du -h --max-depth=1'
    blogname=$((12578*2-$((($(date -d tomorrow +%s)-$(date --date="19851018" +%s) )/86400))))-`date -d tomorrow +%V%a%y`-`date -d tomorrow +%Y%m%d`
    blogfile=$dbg/$blogname
    touch $blogfile
    export blogname=$((12578*2-$((($(date +%s)-$(date --date="19851018" +%s) )/86400))))-`date +%V%a%y`-`date +%Y%m%d`
    export blogfile=$dbg/$blogname
    touch $blogfile
elif [  -n "$(uname -a | grep -i centos)" ]; then
    yum update
elif [  -n "$(uname -a | grep -i darwin)" ]; then
    alias duh1='du -hd1'
    alias ll='ls -la'
    # tomorrow
    begin_second=`date -jf %Y%m%d 19851018 +%s`
    now_second=`date -v+1d  +%s`
    week_day=`date -v+1d +%V%a%y`
    date_day=`date  -v+1d +%Y%m%d`
    live_day=$((($now_second-$begin_second)/86400))
    remaining_day=$((12578*2-$live_day))
    blogname=$remaining_day-$week_day-$date_day
    blogfile=$dbg/$blogname
    touch $blogfile
    # today
    begin_second=`date -jf %Y%m%d 19851018 +%s`
    now_second=`date +%s`
    week_day=`date +%V%a%y`
    date_day=`date +%Y%m%d`
    live_day=$((($now_second-$begin_second)/86400))
    remaining_day=$((12578*2-$live_day))
    export blogname=$remaining_day-$week_day-$date_day
    export blogfile=$dbg/$blogname
    touch $blogfile
elif [  -n "$(uname -a | grep -i android)" ]; then
    echo android
    export dbg=$HOME/blog
    export dcm=$HOME/command
    export PATH=$dcm:$PATH
else
    echo Unknown system
fi

# add command script to PATH
export PATH=$PATH:$dcm

# arm gcc
export PATH=$PATH:$dtl/arm-none-eabi-gcc/gcc-arm-none-eabi-5_4-2016q3/bin

# config java
export JAVA_HOME=$HOME/4T/JDK/jdk1.8.0_231
export JRE_HOME=${JAVA_HOME}/jre
export CLASSPATH=.:${JAVA_HOME}/lib:${JRE_HOME}/lib
export PATH=$PATH:$JAVA_HOME/bin:$JRE_HOME/bin

# config android
export ANDROID_HOME=$HOME/4T/Android/Sdk
export PATH=$PATH:${ANDROID_HOME}/platform-tools
export PATH=$PATH:${ANDROID_HOME}/tools

#add ros directory
